<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:nutridaiet.ViewModels"
             mc:Ignorable="d" d:DesignWidth="540" d:DesignHeight="960"
             x:Class="nutridaiet.Views.LoginView"
             x:DataType="vm:LoginViewModel">
    <Grid>
        <!-- Background with gradient -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                <GradientStop Color="#E5F9E5" Offset="0" />
                <GradientStop Color="White" Offset="1" />
            </LinearGradientBrush>
        </Grid.Background>

        <StackPanel Spacing="20"
                    Width="300"
                    VerticalAlignment="Center">

            <!-- Logo -->
            <Border Background="White"
                    Width="80"
                    Height="80"
                    CornerRadius="16"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,20">
                <Grid>
                    <Image Source="/Assets/logo.png"
                           Width="80"
                           Height="80" />
                </Grid>
            </Border>

            <!-- Welcome Text -->
            <TextBlock Text="欢迎登录"
                       FontSize="24"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20" />

            <!-- Username Input -->
            <Border Background="White"
                    CornerRadius="8"
                    Height="50"
                    Padding="15,0">
                <Grid ColumnDefinitions="Auto,*">
                    <Image Source="/Assets/Person_regular.png"
                           Width="20"
                           Height="20" />
                    <TextBox Grid.Column="1"
                             Margin="10,0,0,0"
                             VerticalAlignment="Center"
                             Watermark="请输入账号/邮箱"
                             BorderThickness="0"
                             Background="Transparent"
                             Text="{Binding Username}" />
                </Grid>
            </Border>

            <!-- Password Input -->
            <Border Background="White"
                    CornerRadius="8"
                    Height="50"
                    Padding="15,0">
                <Grid ColumnDefinitions="Auto,*">
                    <Image Source="/Assets/Lock_regular.png"
                           Width="20"
                           Height="20" />
                    <TextBox Grid.Column="1"
                             Margin="10,0,0,0"
                             VerticalAlignment="Center"
                             Watermark="请输入密码"
                             PasswordChar="●"
                             BorderThickness="0"
                             Background="Transparent"
                             Text="{Binding Password}" />
                </Grid>
            </Border>

            <!-- Login Button -->
            <Button Content="登录"
                    Height="50"
                    CornerRadius="25"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Center"
                    Background="#7ED321"
                    Foreground="White"
                    Command="{Binding LoginCommand}">
                <Button.Styles>
                    <Style Selector="Button:disabled">
                        <Setter Property="Opacity" Value="0.7" />
                    </Style>
                </Button.Styles>
            </Button>
            <!-- IsEnabled="{Binding IsLoading, Converter={x:Static BoolConverters.Inverse}}" -->

            <!-- Register Link -->
            <Button Content="注册"
                    Command="{Binding NavigateToRegisterCommand}"
                    HorizontalAlignment="Center"
                    Cursor="Hand"
                    Background="Transparent"
                    BorderThickness="0">
                <Button.Styles>
                    <Style Selector="Button:pointerover /template/ ContentPresenter">
                        <Setter Property="TextBlock.TextDecorations" Value="Underline" />
                    </Style>
                    <Style Selector="Button">
                        <Setter Property="Foreground" Value="#7ED321" />
                        <Setter Property="Padding" Value="0" />
                    </Style>
                </Button.Styles>
            </Button>

            <!-- ~1~ 在 StackPanel 内添加错误提示 @1@ -->
            <!-- <TextBlock Text="{Binding ErrorMessage}" -->
            <!--            Foreground="Red" -->
            <!--            HorizontalAlignment="Center" -->
            <!--            Margin="0,10,0,0" -->
            <!--            Visibility="{Binding ErrorMessage, Converter={x:Static StringToVisibilityConverters.IsNotNullOrEmpty}}" /> -->

            <!-- Terms and Privacy -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Spacing="4"
                        Margin="0,20,0,0">
                <TextBlock Text="点击阅读并同意"
                           Foreground="#999999"
                           FontSize="12" />
                <Button Content="《隐私条款》"
                        Foreground="#7ED321"
                        FontSize="12"
                        Command="{Binding OpenPrivacyPolicyCommand}"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                </Button>
                <TextBlock Text="及"
                           Foreground="#999999"
                           FontSize="12" />
                <Button Content="《用户协议》"
                        Foreground="#7ED321"
                        FontSize="12"
                        Command="{Binding OpenUserAgreementCommand}"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>